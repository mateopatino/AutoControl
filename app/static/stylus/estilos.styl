@import "normalize.styl"
@import "fonts.styl"
@import "buttons.styl"

vendor-prefixes = webkit o ms moz official
// animacion(parametro)
// 	-webkit-animation parametro
// 	-moz-animation parametro
// 	-o-animation parametro
// 	-ms-animation parametro
// 	animation parametro

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

h4
	margin 0
h5 
	margin 0
a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
footer
	height 5em
	background-color yellow
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss classes
.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
	&.red
		color red
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none
.relative
	position relative
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right 
	float right
.wrap
	width 1000px
.link-item
	color gray
	padding .25em

.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		animation 10s state infinite linear
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%

	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite
.create-count
	position absolute
	top 2.5pxem
	right 0
	margin-right 1em
.registro
	margin-left 1em
.banner
	position relative
	height 30em
.footer
	position relative
	height 23em
	background-color rgba(0,0,0,0.8)
	border-top	3px solid yellow
.information
	color white
	position relative
	height 18em
	width 24em
	top 3em
	margin-left 2em
	margin-bottom 2em
.information-detail
	height 14em
	width 20em
	padding 2em
.content-social
	position relative
	height 5em
	width 50%
	left 25%
.social
	height 4em
	position relative
	padding 1em 9em 0em 9em
.font-social
	font-size 2.5em
	margin-left 0.3em

.content-singup
	position relative
	width 70%
	top 2em
	left 15%
	height 30em
	margin-bottom 8em

.title-singup
	color #808080
	font-size 1.3em
	position absolute
	top 1em
	left 2em
.form-singup
	background-color gris_mas_claro
	color gris_claro
	height 85%
	padding 1.5em
	position absolute
	top 3em
	width 95%
@keyframes state
	0%
		width 0
	100%
		width 100%
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
.header
	height 3.5em
	// a
	// 	display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em
		margin 0 auto

.input
	border 1px solid gris_claro
	height 2em
	border-radius 5px
	padding 0 1em 0 2em
.icon-inputext
	position relative
	left 2em
	top .2em
	color gris_claro
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em
.playlist
	border-left 1px solid gris_claro
	padding 0 2em
	width 22em
	display none
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size .8em
.isotipo
	width 200px
.logo
	height 4em
	background white
	padding 1.3em 0
	display none
	clearfix()
.avatar
	width 50px
	height 50px

.singup-btn
	color white
	background-color #449d44
	border-radius 5px
	padding 0.5em

.content-login
	height 26.45em
.content-login-data
	position relative
	height 20em
	width 50%
	background-color #f0f0f0
	top 3em
	left 25%
	border-radius 10px
.content-car
	background-color gris_mas_claro
	box-shadow: 1px 4px 7px #888;
	height 22em
	margin-left 5em
	position relative
	top 3em
	width 21em
.title-car
	background-color rgba(0,0,0,0.5)
	color white
	height 3.5em
	position absolute
	width 335px
.title-car-data
	color white
	font-size 1.3em
	position absolute
	top 1em
	left 2em
.car-photo
	box-shadow 1px 4px 7px #888888
.car-description
	padding 1em 1em
	color gray
.car-actions
	font-size 2em
	margin-left .3em
.bottom-car
	bottom 0
	color gray
	height 1.5em
	padding 1em
	position absolute
	width 303px
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
			display inline-block
			margin-left .4em
.content-login-field
	left 29%
	position relative
	top 6em
	width 48%
.errorlist
	color red
	font-size .8em

.content-main
	position relative
	height 27.45em


@media screen and (min-width:480px)

	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:1000px)
	
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				transition .3s border-top
				&:hover
					border-top 5px solid gris_claro
	.music
		width 32.5em
		float left
		.description
			display none
	
	.header
		height auto
		border none
		.title
			display none
	.logo
	.playlist
		display block
